<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
                    xmlns:pathicons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons">

    <ResourceDictionary.ThemeDictionaries>

        <ResourceDictionary x:Key="Light">
            <StaticResource x:Key="SelectorBarBackground" ResourceKey="TransparentColorBrush" />
            <StaticResource x:Key="SelectorBarItemPillFill" ResourceKey="TextNormColorBrush" />
            <StaticResource x:Key="SelectorBarItemDisabledPillFill" ResourceKey="TextWeakColorBrush" />
            <StaticResource x:Key="SelectorBarItemBorderBrush" ResourceKey="TransparentColorBrush" />
            <StaticResource x:Key="SelectorBarItemBorderBrushPointerOver" ResourceKey="TransparentColorBrush" />
            <StaticResource x:Key="SelectorBarItemBorderBrushSelected" ResourceKey="TransparentColorBrush" />
            <StaticResource x:Key="SelectorBarItemBorderBrushPressed" ResourceKey="TransparentColorBrush" />
            <StaticResource x:Key="SelectorBarItemBorderBrushDisabled" ResourceKey="TransparentColorBrush" />
            <StaticResource x:Key="SelectorBarItemForeground" ResourceKey="TextWeakColorBrush" />
            <StaticResource x:Key="SelectorBarItemForegroundPointerOver" ResourceKey="TextNormColorBrush" />
            <StaticResource x:Key="SelectorBarItemForegroundSelected" ResourceKey="TextNormColorBrush" />
            <StaticResource x:Key="SelectorBarItemForegroundPressed" ResourceKey="TextNormColorBrush" />
            <StaticResource x:Key="SelectorBarItemForegroundDisabled" ResourceKey="TextHintColorBrush" />
            <StaticResource x:Key="SelectorBarItemBackground" ResourceKey="InteractionDefaultEmptyColorBrush" />
            <StaticResource x:Key="SelectorBarItemBackgroundPointerOver" ResourceKey="InteractionDefaultColorBrush" />
            <StaticResource x:Key="SelectorBarItemBackgroundSelected" ResourceKey="InteractionDefaultEmptyColorBrush" />
            <StaticResource x:Key="SelectorBarItemBackgroundPressed" ResourceKey="InteractionDefaultColorBrush" />
            <StaticResource x:Key="SelectorBarItemBackgroundDisabled" ResourceKey="InteractionDefaultEmptyColorBrush" />
        </ResourceDictionary>

        <ResourceDictionary x:Key="Dark">
            <StaticResource x:Key="SelectorBarBackground" ResourceKey="TransparentColorBrush" />
            <StaticResource x:Key="SelectorBarItemPillFill" ResourceKey="TextNormColorBrush" />
            <StaticResource x:Key="SelectorBarItemDisabledPillFill" ResourceKey="TextWeakColorBrush" />
            <StaticResource x:Key="SelectorBarItemBorderBrush" ResourceKey="TransparentColorBrush" />
            <StaticResource x:Key="SelectorBarItemBorderBrushPointerOver" ResourceKey="TransparentColorBrush" />
            <StaticResource x:Key="SelectorBarItemBorderBrushSelected" ResourceKey="TransparentColorBrush" />
            <StaticResource x:Key="SelectorBarItemBorderBrushPressed" ResourceKey="TransparentColorBrush" />
            <StaticResource x:Key="SelectorBarItemBorderBrushDisabled" ResourceKey="TransparentColorBrush" />
            <StaticResource x:Key="SelectorBarItemForeground" ResourceKey="TextWeakColorBrush" />
            <StaticResource x:Key="SelectorBarItemForegroundPointerOver" ResourceKey="TextNormColorBrush" />
            <StaticResource x:Key="SelectorBarItemForegroundSelected" ResourceKey="TextNormColorBrush" />
            <StaticResource x:Key="SelectorBarItemForegroundPressed" ResourceKey="TextNormColorBrush" />
            <StaticResource x:Key="SelectorBarItemForegroundDisabled" ResourceKey="TextHintColorBrush" />
            <StaticResource x:Key="SelectorBarItemBackground" ResourceKey="InteractionDefaultEmptyColorBrush" />
            <StaticResource x:Key="SelectorBarItemBackgroundPointerOver" ResourceKey="InteractionDefaultColorBrush" />
            <StaticResource x:Key="SelectorBarItemBackgroundSelected" ResourceKey="InteractionDefaultEmptyColorBrush" />
            <StaticResource x:Key="SelectorBarItemBackgroundPressed" ResourceKey="InteractionDefaultColorBrush" />
            <StaticResource x:Key="SelectorBarItemBackgroundDisabled" ResourceKey="InteractionDefaultEmptyColorBrush" />
        </ResourceDictionary>

    </ResourceDictionary.ThemeDictionaries>

    <Style TargetType="SelectorBar" />
    <Style TargetType="SelectorBarItem" />

</ResourceDictionary>