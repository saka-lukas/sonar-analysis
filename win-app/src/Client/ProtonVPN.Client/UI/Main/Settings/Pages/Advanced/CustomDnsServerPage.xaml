<Page x:Class="ProtonVPN.Client.UI.Main.Settings.Pages.Advanced.CustomDnsServersPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
      xmlns:pathicons="using:ProtonVPN.Client.Common.UI.Assets.Icons.PathIcons"
      xmlns:custom="using:ProtonVPN.Client.Common.UI.Controls.Custom"
      xmlns:advanced="using:ProtonVPN.Client.UI.Main.Settings.Pages.Advanced"
      xmlns:ap="using:ProtonVPN.Client.Common.UI.AttachedProperties"
      x:DefaultBindMode="OneWay"
      NavigationCacheMode="Required"
      mc:Ignorable="d">

    <custom:SettingsPageContentControl x:Name="PageContentHost"
                                       ApplyCommand="{x:Bind ViewModel.ApplyCommand, Mode=OneTime}"
                                       ApplyCommandText="{x:Bind ViewModel.ApplyCommandText}"
                                       BackCommand="{x:Bind ViewModel.NavigateBackCommand, Mode=OneTime}"
                                       CloseCommand="{x:Bind ViewModel.CloseCommand, Mode=OneTime}"
                                       IsBackButtonVisible="{x:Bind ViewModel.CanGoBack}">

        <custom:SettingsPageContentControl.PageHeader>
            <custom:SettingsPageHeaderContentControl Header="{x:Bind ViewModel.Title}" />
        </custom:SettingsPageContentControl.PageHeader>

        <StackPanel x:Name="ContentArea"
                    Spacing="16">
            <toolkit:SettingsCard Description="{x:Bind ViewModel.Localizer.Get('Settings_Connection_Advanced_CustomDnsServers_Description')}"
                                  Header="{x:Bind ViewModel.Localizer.Get('Settings_Connection_Advanced_CustomDnsServers')}"
                                  IsTabStop="False"
                                  Style="{StaticResource DefaultSettingsCardStyle}">
                <ToggleSwitch IsOn="{x:Bind ViewModel.IsCustomDnsServersEnabled, Mode=TwoWay}"
                              Style="{StaticResource ToggleSwitchStyle}"
                              AutomationProperties.AutomationId="CustomDnsToggle"/>
            </toolkit:SettingsCard>

            <StackPanel Spacing="8"
                        Visibility="{x:Bind ViewModel.IsCustomDnsServersEnabled}">

                <TextBlock Foreground="{ThemeResource TextWeakColorBrush}"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Text="{x:Bind ViewModel.Localizer.GetFormat('Settings_Connection_Advanced_CustomDnsServers_Header', ViewModel.ActiveCustomDnsServersCount)}" />

                <toolkit:SettingsCard IsTabStop="False"
                                      Style="{StaticResource VerticalSettingsCardStyle}">
                    <Grid Margin="0,-8,0,0"
                          ColumnSpacing="8">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Margin="0,0,0,8"
                                   Style="{StaticResource CaptionStrongTextBlockStyle}"
                                   Text="{x:Bind ViewModel.Localizer.Get('Settings_Connection_Advanced_CustomDnsServers_AddNew')}" />

                        <TextBox Grid.Row="1"
                                 Grid.Column="0"
                                 PlaceholderText="{x:Bind ViewModel.Localizer.Get('Settings_Common_IpAddresses_Watermark')}"
                                 Text="{x:Bind ViewModel.CurrentIpAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Description="{x:Bind ViewModel.Localizer.Get('Settings_Connection_Advanced_CustomDnsServers_IpAddress_Description')}"
                                 ap:FieldValidation.ErrorMessage="{x:Bind ViewModel.IpAddressError}"
                                 ap:FieldValidation.HasErrors="{x:Bind ViewModel.IpAddressError, Converter={StaticResource NotNullToBooleanConverter}}"
                                 KeyDown="{x:Bind ViewModel.OnIpAddressKeyDownHandler, Mode=OneTime}"
                                 AutomationProperties.AutomationId="CustomDnsIpAddressBox"
                                 Style="{StaticResource ValidationTextBoxStyle}"
                                 MinHeight="34" />

                        <Button Grid.Row="1"
                                Grid.Column="1"
                                VerticalAlignment="Top"
                                Command="{x:Bind ViewModel.AddDnsServerCommand, Mode=OneTime}"
                                Content="{x:Bind ViewModel.Localizer.Get('Common_Actions_Add')}"
                                AutomationProperties.AutomationId="AddButton"/>

                        <ListView Grid.Row="2"
                                  Grid.Column="0"
                                  Grid.ColumnSpan="2"
                                  Margin="0,16,0,0"
                                  ItemsSource="{x:Bind ViewModel.CustomDnsServers}"
                                  Visibility="{x:Bind ViewModel.HasCustomDnsServers, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  CanReorderItems="{x:Bind ViewModel.IsDragDropEnabled}"
                                  AllowDrop="{x:Bind ViewModel.IsDragDropEnabled}"
                                  SelectionMode="None"
                                  Style="{StaticResource GhostListViewStyle}">
                            <ListView.ItemContainerTransitions>
                                <TransitionCollection>
                                    <ReorderThemeTransition/>
                                </TransitionCollection>
                            </ListView.ItemContainerTransitions>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="advanced:DnsServerViewModel">
                                    <Grid ColumnSpacing="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <pathicons:Dots Grid.Column="0"
                                                        Margin="8,0,0,0"
                                                        Size="Pixels16"
                                                        VerticalAlignment="Center"
                                                        Visibility="{x:Bind IsDragDropEnabled, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                        AutomationProperties.AutomationId="DnsItemDragHandle"/>

                                        <StackPanel Grid.Column="1"
                                                    Spacing="2"
                                                    Orientation="Horizontal">
                                            <CheckBox Grid.Column="1"
                                                      Content="{x:Bind IpAddress}"
                                                      IsChecked="{x:Bind IsActive, Mode=TwoWay}"
                                                      AutomationProperties.AutomationId="DnsItemToggle"/>
                                            <custom:GhostButton HorizontalAlignment="Left"
                                                                AutomationProperties.AutomationId="ShowIpv6DisabledWarningButton"
                                                                AutomationProperties.Name="{x:Bind Localizer.Get('Settings_Common_Ipv6WarningButton')}"
                                                                ToolTipService.ToolTip="{x:Bind Localizer.Get('Settings_Common_Ipv6WarningButton')}"
                                                                Command="{x:Bind ShowIpv6DisabledWarningCommand, Mode=OneTime}"
                                                                Visibility="{x:Bind IsInactiveDueToIpv6Disabled, Converter={StaticResource BooleanToVisibilityConverter}, Mode=OneTime}">
                                                <custom:GhostButton.LeftIcon>
                                                    <pathicons:ExclamationCircle />
                                                </custom:GhostButton.LeftIcon>
                                            </custom:GhostButton>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" 
                                                    Grid.Column="2" 
                                                    BorderThickness="1"
                                                    CornerRadius="5"
                                                    BorderBrush="{ThemeResource BorderWeakColorBrush}">
                                            <custom:GhostButton Command="{x:Bind MoveDnsServerUpCommand, Mode=OneTime}"
                                                                AutomationProperties.Name="{x:Bind MoveUpTooltip}"
                                                                ToolTipService.ToolTip="{x:Bind MoveUpTooltip}"
                                                                AutomationProperties.AutomationId="MoveUpButton">
                                                <custom:GhostButton.LeftIcon>
                                                    <pathicons:ChevronUpFilled/>
                                                </custom:GhostButton.LeftIcon>
                                            </custom:GhostButton>
                                            <custom:GhostButton  Command="{x:Bind MoveDnsServerDownCommand, Mode=OneTime}"
                                                                 AutomationProperties.Name="{x:Bind MoveDownTooltip}"
                                                                 ToolTipService.ToolTip="{x:Bind MoveDownTooltip}"
                                                                 AutomationProperties.AutomationId="MoveDownButton">
                                                <custom:GhostButton.LeftIcon>
                                                    <pathicons:ChevronDownFilled/>
                                                </custom:GhostButton.LeftIcon>
                                            </custom:GhostButton>
                                        </StackPanel>

                                        <custom:GhostButton Grid.Column="3"
                                                            Command="{x:Bind RemoveDnsServerCommand, Mode=OneTime}"
                                                            AutomationProperties.Name="{x:Bind RemoveTooltip}"
                                                            ToolTipService.ToolTip="{x:Bind RemoveTooltip}"
                                                            AutomationProperties.AutomationId="TrashIcon">
                                            <custom:GhostButton.LeftIcon>
                                                <pathicons:Trash />
                                            </custom:GhostButton.LeftIcon>
                                        </custom:GhostButton>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </toolkit:SettingsCard>

                <TextBlock Foreground="{ThemeResource TextWeakColorBrush}"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Text="{x:Bind ViewModel.Localizer.Get('Settings_Connection_Advanced_CustomDnsServers_Footer')}" />
            </StackPanel>
        </StackPanel>
    </custom:SettingsPageContentControl>
</Page>